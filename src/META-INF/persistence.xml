<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="UyTubePU" transaction-type="RESOURCE_LOCAL">
    <!-- Persistence provider -->
    <!-- Entity classes -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>logica.Usuario</class>
    <class>logica.Video</class>
    <class>logica.Categoria</class>
    <class>logica.Canal</class>
    <properties>
      <!-- The JDBC driver of your database -->
      <!-- The JDBC URL to the database instance -->
      <!-- The database username -->
      <!-- The database password -->
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:data/uytubedb"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
